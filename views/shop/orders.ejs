<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { console.log('orders: ', csrfToken) %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1>Order - # <%= order._id %></h1>
                            <table id="cart-item-head">
                                <tr>
                                    <th>Meal</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Ordered by</th>
                                    <th>Remove</th>
                                    <th>Total Price</th>
                                </tr>
                        </table>
                        <table id="cart-item-body">
                            <% orders.forEach(p => { %> <% order.products.forEach(p => { %>
                                <tr>
                                 
                                   <td> <h1><%= p.orderId %></h1></td>
                                   <td> <h1 id='item-price'>GHâ‚µ<%= p.price %></h1></td>
                                   
                                    <td><button onclick="decrement()">-</button>
                                              <input id="demoInput" type="number" min="1" max="100" value='<%= p.quantity %>'>
                                              <button onclick="increment()">+</button>
                                             </td>
                                    <td><form action="/cart-delete-item" method="POST">
                                        <input type="hidden" value="<%= p.orderId%>" name="orderId">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button class="btn danger" type="submit">Delete</button>
                                    </form>
                                </td>
                                    
                                </tr>
                            <% }) %>
                    </table>
                            <!-- <ul class="orders__products">
                                <% order.products.forEach(p => { %>
                                    <li class="orders__products-item"><%= p.product.title %> (<%= p.quantity %>)</li>
                                <% }); %>
                            </ul> -->
                        </li>
                    <% }); %>
                </ul>
            <% }) %>
            <% } %>
        </main>
        <%- include('../includes/footer.ejs') %>