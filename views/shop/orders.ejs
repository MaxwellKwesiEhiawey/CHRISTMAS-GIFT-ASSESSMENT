<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { console.log('orders: ', csrfToken) %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1>Order - # <%= order._id %></h1>
                            <table id="cart-item-head">
                                <tr>
                                    <th>Meal</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total Price</th>
                                    <th>Ordered by</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Edit</th>
                                    <th>Remove</th>
                                </tr>
                        </table>
                        <table id="order-item-body">
                            <% orders.forEach(p => { %> 
                                <tr>
                                    <td> <h1><%= order.productId %></h1></td>
                                   <td> <h1 id='item-price'>GH₵<%= p.price %></h1></td>
                                    <td><button onclick="decrement()">-</button>
                                              <input id="demoInput" type="number" min="1" max="100" value='<%= p.quantity %>'>
                                              <button onclick="increment()">+</button>
                                             </td>
                                <td><h1 id='item-total'>GH₵</h1></td>
                                <td><%= p.name %></td>
                                <td></td>
                                <td class="status"> <div class="form-control">
                                    <label for="status"></label>
                                    <select name="category" id="category">
                                        <option value="pending">Pending</option>
                                        <option value="all">Delivered</option>
                                        <option value="cancelled">Cancelled</option>
                                    </select>
                                </div></td>
                                <td></td>
                                <td><form action="/order-delete-item" method="POST">
                                    <input type="hidden" value="<%= p.orderId%>" name="orderId">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button class="btn danger" type="submit">Delete</button>
                                </form>
                            </td>
                                </tr>
                            <% }) %>
                    </table>
                            <!-- <ul class="orders__products">
                                <% order.products.forEach(p => { %>
                                    <li class="orders__products-item"><%= p.product.title %> (<%= p.quantity %>)</li>
                                <% }); %>
                            </ul> -->
                        </li>
                    <% }); %>
                </ul>
            <% } %>
          
        </main>
        <%- include('../includes/footer.ejs') %>
        <script src="/js/order.js"></script>