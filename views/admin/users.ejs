<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">   
    <link rel="stylesheet" href="/css/users.css">
     <%- include('../includes/navigation.ejs') %>
    </head>

    <body class="body-tag">
       
        <main>
            <% if (users.length > 0) { %>
                <div id="user-item-container">
                <h1 data-v-5a78baf3="" class="text-center cart-text m-auto">Users</h1>
                <table id="user-item-head">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>User Type</th>
                            <th>User ID </th>
                            <th>Department</th>
                            <th>Status</th>
                        </tr>
                </table>
                <table id="user-item-body">
                        <% users.forEach(p => { %>
                            <tr>
                                <td><%= p.name %></td>
                                <td><%= p.email %></td>
                                <td><%= p.usertype %></td>
                                <td><%= p.userid %></td>
                                <td><%= p.department %></td>
                                <td><%= p.status %></td>
                            </tr>
                        <% }) %>
                </table>
            </div>
            <% } else { %>
                <h1>No Users!</h1>
            <% } %>

            <div id="myModal" class="modal">
                <div class="modal-content">
                    <div class="modal-header">
                        <span class="close">&times;</span>
                        <h2>Update User</h2>
                    </div>
                    <div class="modal-body">
                        <%- include('../../forms/user-update-form.ejs') %>
                    </div>
                </div>
            </div>
        </main>
        
        <%- include('../includes/footer.ejs') %>
        <script src="/js/admin.js"></script>
</body>
</html>