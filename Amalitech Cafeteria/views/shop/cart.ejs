<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (products.length > 0) { %>
                <h1 data-v-5a78baf3="" class="text-center cart-text m-auto">Your Cart</h1>
                <table>
                    <thead>
                        <tr class= "cart-item-header">
                            <th>Meal</th>
                            <th>Meal Name</th>
                            <th>Price</th>
                            <!-- <th>Ordered by </th> -->
                            <th>Quantity</th>
                            <th>Remove</th>
                            <th>Total Price</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(p => { %>
                            <tr class="cart__item">
                               <td><img src="<%= p.productId.imageUrl %>" alt=""></td> 
                               <td> <h1><%= p.productId.title %></h1></td>
                               <td> <h1>GH₵<%= p.productId.price %></h1></td>
                               <!-- <td> <h1><%= p.productId.price %></h1></td> -->
                                <td><h2><%= p.quantity %></h2></td>
                                <td><form action="/cart-delete-item" method="POST">
                                    <input type="hidden" value="<%= p.productId._id %>" name="productId">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button class="btn danger" type="submit">Delete</button>
                                </form></td>
                                <td>GH₵<%= p.productId.price * p.quantity %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
                <hr>
                <div class="centered">
                    <form action="/create-order" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn">Order Now!</button>
                    </form>
                </div>
                
            <% } else { %>
                <h1>No Products in Cart!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>
        <%- include('../includes/footer.ejs') %>