<%- include('../includes/head.ejs') %>
        <link rel="stylesheet" href="/css/forms.css">
        <link rel="stylesheet" href="/css/payment.css">
    </head>

    <body onload="onLoad()">
        <%- include('../includes/navigation.ejs') %>
       
        <main>
            <div class="container">
                <div class="row">
                    <!-- You can make it whatever width you want. I'm making it full width
                    on <= small devices and 4/12 page width on >= medium devices -->
                    <% if (orders.length <= 0) { %>
                        <h1>Nothing here!</h1>
                    <% } else { console.log('payment: ', csrfToken)%>
                    <div class="col-xs-12 col-md-4">
                        <!-- CREDIT CARD FORM STARTS HERE -->
                        <div class="panel panel-default credit-card-box">
                            <div class="panel-heading display-table" >
                                <div class="row display-tr" >
                                <h3 class="panel-title display-td" >Payment Details</h3>
                                </div>  
                                <div class="row display-tr" >
                                        <div class="display-td" >                            
                                            <img class="img-responsive pull-right card" id="visa" src="images/visa.png">
                                            <img class="img-responsive pull-right card" id="mscard" src="images/mastercard.png">
                                            <img class="img-responsive pull-right momo" id="mtn" src="images/mtn.png">
                                            <img class="img-responsive pull-right momo" id="tigo" src="images/tigo.jpeg">
                                        </div>
                                    </div>                    
                            </div>
                            <div class="panel-body" id="panel-body-card">
                                <form role="form" id="payment-form" action="/create-order" method="POST">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <div class="form-control">
                                                <label for="cardNumber">CARD NUMBER</label>
                                                <div class="input-group">
                                                    <input 
                                                    type="tel"
                                                    class="form-control"
                                                    name="cardNumber"
                                                    autocomplete="cc-number"
                                                    required autofocus 
                                                    />
                                                    <span class="input-group-addon"><i class="fa fa-credit-card"></i></span>
                                                </div>
                                            </div>                            
                                        </div>
                                    </div>
                                <div class="row">
                                    <div class="col-xs-7 col-md-7">
                                        <div class="form-control">
                                        <label for="cardExpiry"><span class="hidden-xs">EXPIRATION</span><span class="visible-xs-inline">EXP</span> DATE</label>
                                        <input 
                                        type="tel" 
                                        class="form-control" 
                                        name="cardExpiry"
                                        autocomplete="cc-exp"
                                        required 
                                        />
                                        </div>
                                    </div>
                                <div class="col-xs-5 col-md-5 pull-right">
                                    <div class="form-control">
                                        <label for="cardCVC">CV CODE</label>
                                        <input 
                                        type="tel" 
                                        class="form-control"
                                        name="cardCVC"
                                        autocomplete="cc-csc"
                                        required
                                        />
                                    </div>
                                </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="form-control">
                                            <label for="couponCode">COUPON CODE</label>
                                            <input type="text" class="form-control" name="couponCode" />
                                        </div>
                                    </div>                        
                                </div>
                                <div class="row">
                                    <div class="col-xs-12">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button class="btn btn-success btn-lg btn-block" type="submit">Make Payment</button>
                                    </div>
                                </div>
                                <div class="row" style="display:none;">
                                    <div class="col-xs-12">
                                        <p class="payment-errors"></p>
                                    </div>
                                </div>
                                </form>
                            </div>
                            <div class="panel-body" id="panel-body-momo">
                                <form role="form" id="payment-form" action="/create-order" method="POST">
                                <div class="row">
                                    <div class="col-xs-7 col-md-7">
                                        <div class="form-control">
                                        <label for="phone">PHONE</label>
                                        <input 
                                        type="tel" 
                                        class="form-control" 
                                        name="phone"
                                        required 
                                        />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="form-control">
                                            <label for="couponCode">COUPON CODE</label>
                                            <input type="text" class="form-control" name="couponCode" />
                                        </div>
                                    </div>                        
                                </div>
                                <div class="row">
                                    <div class="col-xs-12">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button class="btn btn-success btn-lg btn-block" type="submit">Make Payment</button>
                                    </div>
                                </div>
                                <div class="row" style="display:none;">
                                    <div class="col-xs-12">
                                        <p class="payment-errors"></p>
                                    </div>
                                </div>
                                </form>
                            </div>
                        </div>            
                        <!-- CREDIT CARD FORM ENDS HERE -->
                    </div> 
                    <% } %>           
                </div>
            </div>
        </main>
        
        <%- include('../includes/footer.ejs') %>
        <script src="/js/payment.js"></script>
    </body>
</html>